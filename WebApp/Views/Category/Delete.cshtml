@model Category
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">
                Delete Contact
            </h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FullName"> Name</label>
            <input asp-for="FullName" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" disabled type="tel" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="PhysicalAddress">Physical Address</label>
            <input asp-for="PhysicalAddress" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px"> Delete </button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>

    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"></partial>
}

